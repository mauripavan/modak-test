{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es6",
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation",
          ]
        }
      }
    ]
  },
  "extends": "@react-native/typescript-config/tsconfig.json"
}